{
    "manifest_version": 3,
    "name": "Group Catcher",
    "version": "1.1",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["https://groups.roblox.com/*"],
    "background": { "service_worker": "background.js" },
    "action": { "default_popup": "popup.html" },
    "content_scripts": [
      {
        "matches": ["https://www.roblox.com/groups/*"],
        "js": ["content.js"]
      }
    ]
  }
  